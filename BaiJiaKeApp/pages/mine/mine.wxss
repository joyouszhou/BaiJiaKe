/* pages/mine/mine.wxss */
.body{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgb(245,245,245)
}
.userInfo{
  width: 100vw;
  height: 220rpx;
  background: rgb(109,174,255)
}
.userInfo view{
  width: 100vw;
  margin-top: 20rpx;
  margin-left: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: white;
}
.userInfo view image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border: 6rpx solid rgb(149,192,251);
  border-radius: 50%;
}
.btnBox{
  width: 690rpx;
  margin-top: -55rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border-radius: 10rpx;
}
.btnBox view{
  width: 100%;
  height: 115rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 3rpx solid rgb(227,227,227);
}
.btnBox view image{
  width: 40rpx;
  height: 40rpx;
  margin:0 25rpx;
}
.btnBox view text{
  margin-right:25rpx;
}
.btnBox view text:nth-child(3){
  flex-grow: 2;
  text-align: right;
}