<!--pages/mine/mine.wxml-->
<view class="body">
  <view class="userInfo">
    <view>
      <image src="{{userInfo.avatarUrl}}"></image>
      <text>{{userInfo.nickName}}</text>
    </view>
  </view>
  <view class="btnBox">
    <view wx:for="{{btnList}}" wx:key="index" data-id="{{index}}" bindtap="btnClick">
      <image src="{{item.url}}"></image>
      <text>{{item.name}}</text>
      <text>></text>
    </view>
  </view>
</view>
