/* pages/courseDetails/courseDetails.wxss */
.body{
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiperBox{
  width: 100vw;
  height: 455rpx; 
  margin-bottom: 50rpx;
}
.swiperBox swiper{
  width: 100%;
  height: 100%;
}
.swiperBox swiper swiper-item{
  width: 100%;
  height: 100%;
}
.swiperBox swiper swiper-item image{
  width: 100%;
  height: 100%;
}
.swperNum{
  width: 690rpx;
  margin-top :-100rpx;
  margin-bottom: 50rpx;
  text-align: right;
  z-index: 100
}


.courseDetails{
  width: 700rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  position: relative;

}
.infoTitle{
  width: 100%;
  line-height: 28rpx;
  font-size: 28rpx;
  color:rgb(36,123,160);
  font-weight: 700;
  padding: 20rpx 0;
}
.detailsInfo{
  width: 100%;
  min-height: 85rpx;
  /* border-bottom: 4rpx solid rgb(226,226,226); */
  font-size: 26rpx;
  color: rgba(34,34,34,0.65);
}
.courseDetails .title{
  width: 600rpx;
  font-size: 28rpx;
  color: black;
  font-weight: 700;
  margin-bottom: 15rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.title{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  color: black;
  font-weight: 700;
  margin-bottom: 30rpx;
}
.share{
  float: right;
  width: 60rpx;
  color:rgb(166,166,166);
  text-align: center;
  padding: 0;
  border: none;
  font-size: 24rpx;
  background: none;
  line-height: inherit;
  margin: 0;
}
.share::after{
  border: none;
}
.title .share image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}

.detailsInfo1 {
  height: auto;
  padding-bottom: 10rpx;
}
.detailsInfo view{
  width: 50%;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 25rpx;
}
.detailsInfo view text:nth-child(1){
  margin-right: 15rpx;
  font-size: 24rpx;
  color: rgb(173,173,173);
}
.detailsInfo view text:nth-child(2){
  font-size: 24rpx;
  color: rgb(82,82,82);
}
.detailsInfo .detailsInfoItem{
  width: 100%;
}
.detailsInfo .detailsInfoItem .right{
  float: right;
  color: rgb(115,115,115)
}
.detailsInfo .detailsInfoItem1 {
  height: auto;
  margin-top: 8rpx;
}
.detailsInfoItem image{
  width: 32rpx;
  height: 32rpx;
}
.detailsInfoItem .bottom{
  width: 46rpx;
  height: 46rpx;
  display: block;
  padding-left: 88rpx;
}
.courseInfo{
  width: 700rpx;
}
.courseTitle {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  text-align: center;
  color:rgb(60,60,60);
}
.courseInfo view{
  height: auto;
  margin: 20rpx 0; 
  overflow: hidden;
}
.courseInfo view:nth-child(2){
  line-height: 30rpx;
  color: rgb(167,167,167);
  font-size: 25rpx;
} 
.rule {
  width: 716rpx;
  height: 4rpx;
}
.tips{
  margin-bottom: 50rpx;
  padding: 0 20rpx;
}
.tips .infoTitle {
  font-size: 24rpx;
  text-align: center;
  color: rgb(211,111,42);
  margin-top: 20rpx;
}
.tips view:nth-child(2),.tips view:nth-child(4) {
  margin: 20rpx 0;
  width: 566rpx;
  font-size: 24rpx;
  color: rgb(173,173,173);
}
.tips image{
  width: 655rpx;
  height: 450rpx;
}

.hotList{
  width: 90%;
  margin-top:15rpx;
  margin-bottom: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.hotList view{
  width: 200rpx;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hotList view image{
  width: 100%;
  height: 190rpx;
  margin-bottom: 10rpx;
}
.hotList view text{
  font-size: 24rpx;
  color: rgb(138,138,138);
}

.scroll-view{
  display: flex;
  white-space: nowrap;
  margin-bottom: 120rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.scroll-view .scroll-view-item{
  width: 206rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.scroll-view .scroll-view-item .img-box,.scroll-view .scroll-view-item image{
  width: 100%;
  height: 163rpx;
}
.scroll-view .scroll-view-item .name{
  width: 100%;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-top: 10rpx;
}
.didian-jigou{
  width: 100%;
  font-size: 28rpx;
}
.didian-jigou .didian,.shop-info{
  display: flex;
  align-items: center;
  padding: 20rpx 0 0 0;
}
.didian-jigou .didian image{
  flex: 1;
  width: 32rpx;
  height: 32rpx;
}
.didian-jigou .didian .info{
  flex: 10;
  color: rgba(34,34,34,0.65);
  font-size: 26rpx;
  line-height: 39rpx;

}
.didian-jigou .didian .jiant{
  flex: 1;
  text-align: center;
  color: #999999;
}
.shop-info image.shop-info-img{
  flex: 2;
  width: 96rpx;
  height: 96rpx;
}
.shop-info .shop-info-info{
  flex: 10;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shop-info-info>view:nth-child(1) {
  width: 280rpx;
}
.line{
  min-height: 94rpx;
  width: 2rpx;
  background-color: rgb(226,226,226);
}
.jvli{
  font-size: 24rpx;
  color: rgb(173,173,173);
}
.shop-info .phone {
  flex: 2;
  text-align: center;
}
.shop-info .phone image{
  width: 45rpx;
  height: 45rpx;
}
.tag-box{
  margin-top: 10rpx;
}
.tabBar{
  width: 100vw;
  height: 106rpx;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #E4EAF1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: white;
}
.tabBar .btn{
  width:130rpx;
  height: 70rpx;
  margin: 25rpx 0;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}
.tabBar  .yuyue{
  background: #F25F5C; 
  border-radius: 12rpx;
  border-radius: 12rpx;
  width: 276rpx;
  height: 72rpx;
  font-size: 28rpx;
}
.tabBar .yuyue text {
  color: #fff;
  font-size: 28rpx;
}
.tabBar .yuyue image {
  margin-left: 40rpx;
}
.tabBar image{
  width: 40rpx;
  height: 40rpx;
  float: left;
  padding: 15rpx 10rpx;
}
.tabBar text{
  float: left;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #222222;
  letter-spacing: 0;
  line-height:70rpx;
}
.tag-list{
  display: flex;
  align-items: center;
  margin-bottom: 5rpx;
}
.tag-list .tag-box {
  padding: 20rpx 0rpx;
}
.tag-list image{
  margin-right: 10rpx;
  width: 68rpx;
  height: 34rpx;
}
.cutOffRule {
  height: 10rpx;
  width: 100%;
  opacity: 0.65;
  background: #E4EAF1;
}
.detailsInfoItems {
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid rgb(226,226,226);
  border-top: 1px solid rgb(226,226,226);
  display: flex;
}
.detailsInfoItems .daohang {
  width: 20rpx;
  height: 25.6rpx;
  margin-right: 20rpx;
  float: left;
  padding-top: 9rpx;
}
.detailsInfoItems text {
  width: 575rpx;
  float: left;
  font-size: 26rpx;
  color: rgba(34,34,34,0.65);
  letter-spacing: 0;
  line-height: 39rpx;
  flex: 6;
}
.detailsInfoItems .skip {
  width: 22.6rpx;
  height: 22.6rpx;
  float: right;
  padding-top: 8rpx;
}
.courseDetails .share_on {
  position: absolute;
  top: 0;
  right: 0rpx;
  height: 40rpx;
  width: 40rpx;
}
.courseDetails .share_on image {
  height: 40rpx;
  width: 40rpx;
}