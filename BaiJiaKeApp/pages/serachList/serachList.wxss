/* pages/courseClass/courseClass.wxss */
.body{
  width: 100vw;
  height: 100vh;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.search{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 35rpx;
  background-color: rgba(208,204,204,0.3);
  border:1rpx solid rgb(208,204,204);
  border-radius: 15rpx;
}
.search input{
  width: 600rpx;
  font-size: 24rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.search image{ 
  width:24rpx;
  display: block;
  height:24rpx;
  padding:0 20rpx;
}
.tabBar{
  width: 100vw;
  height: 90rpx;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: white;
  font-size: 26rpx;
  color: rgb(34,34,34);
}
.tabBar view{
  height: 28rpx;
}
.tabBar view image{
  width: 20rpx;
  height: 20rpx;
}

.classList{
  width: 100vw;
  height: 0;
  position: fixed;
  top: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  overflow: hidden;
  background: white;
  border-bottom: 1rpx solid rgb(213,213,213);
  box-shadow:0rpx 20rpx 70rpx -50rpx;
}
.classItem{
  width: 160rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  border: 2px solid rgb(213,213,213);
  border-radius: 30rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
}

.courseList{
  width: 700rpx;
  display: flex;
  margin-top: 20rpx;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}
.courseItem{
  width: 100%;
  margin-bottom: 20rpx;
  border:1px solid rgb(227,227,227);
  border-radius: 12rpx;
  overflow: hidden;
}
.courseList .courseItem view.img-box{
  width: 100%;
  height: 264rpx;
}
.courseList .courseItem .img-box image{
  width: 100%;
  height: 100%;
}
.courseInfo{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 16rpx;
  position: relative;
}
.courseInfo .title{
  width: 430rpx;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.courseInfo image{
  height: 62rpx;
  width: 62rpx;
  display: block;
  text-align: left;
  font-size: 20rpx;
  margin: 10rpx 0;
}
.courseInfo .number{
  width: 662rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  justify-content: space-between;
  color: rgba(34,34,34,0.65);
}
.courseInfo .info{
  width: 662rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  color: rgba(34,34,34,0.65);
}
.courseInfo .info image{
  width: 28rpx;
  height: 24rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}
.courseInfo .info view:nth-child(2){
  display: flex;
  margin-left: 10rpx;
  flex-direction: row-reverse;
  justify-content: right;
}
.tag-list{
  display: flex;
  align-items: center;
  position: absolute;
  top: 12rpx;
  right: 20rpx;
}
.tag-list .tag-box {
  padding: 20rpx 0rpx;
}
.tag-list image{
  margin-left: 10rpx;
  width: 68rpx;
  height: 34rpx;
}