/* pages/shouCang/shouCang.wxss */
.body{
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.courseList{
  width: 640rpx;
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}
.courseItem{
  width: 100%;
}
.courseList .courseItem view{
  width: 100%;
  height: 150rpx;
}
.courseList .courseItem view image{
  width: 100%;
  height: 100%;
}
.courseInfo{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border:1px solid rgb(227,227,227);
  font-size: 16rpx;
}
.courseInfo view:nth-child(1){
  height: 45rpx;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
.courseInfo view:nth-child(2){
  width: 560rpx;
  height: 45rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
}
.courseInfo view:nth-child(3){
  width: 560rpx;
  height: 45rpx;display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* font-size: 16rpx; */
}
.courseInfo view:nth-child(3) image{
  width: 22rpx;
  height: 22rpx;
}
.courseInfo view:nth-child(3) view:nth-child(2){
  display: flex;
  flex-direction: row-reverse;
  justify-content: right;
}