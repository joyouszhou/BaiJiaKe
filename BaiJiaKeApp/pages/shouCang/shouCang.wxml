<!--pages/shouCang/shouCang.wxml-->
<view class="body">
  <!-- 课程列表 -->
  <view class="courseList">
    <view class="courseItem"
      wx:for="{{courseList}}" wx:key="index" data-item="{{item}}" 
      
      >
      <view>
        <image src="{{'https://baijiake.net'+item.imageurl[0]}}" bindtap="toCourseDetails" data-item="{{item}}" ></image>
        <text class="shanChu" bindtap='shanChu' data-item="{{item}}">删除</text>
        <!-- <button ></button> -->
      </view>
      <view class="courseInfo" bindtap="toCourseDetails" data-item="{{item}}" >
        <view>{{item.name}}</view>
        <view>
          <text>课程点击数 {{"356"}}</text>
          <text>{{item.ages}}岁</text>
        </view>
        <view>
          <view>
            <text>{{item.teacher}}</text>
            <image src="/images/home/renzheng.png"></image>
          </view>
          <view>
            <text>距离{{item.weight}}公里</text>
            <image src="/images/home/daohang.png"></image>
          </view>
        </view>
      </view>
    </view>
    
  </view>
</view>
