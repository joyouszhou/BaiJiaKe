/* pages/home/home.wxss */
.body{
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.search{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:670rpx;
  height:44rpx;
  line-height: 44rpx;
  margin-top: 35rpx;
  background-color: rgba(208,204,204,0.3);
  border:1rpx solid rgb(208,204,204);
  border-radius: 15rpx;
}
.search input{
  width: 600rpx;
  font-size:20rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.search image{ 
  width:24rpx;
  display: block;
  height:24rpx;
  padding:0 20rpx;
}
.navBox{
  width: 700rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 50rpx;
}
.navItem{
  width: 98rpx;
  height: 138rpx;
  margin: 0 20rpx;
  text-align: center;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navItem image{
  width: 82rpx;
  height: 82rpx;
  margin-bottom: 18rpx;
}
.navItem text{
  font-family: 'microsoft yahei';
  font-size: 18rpx;
  color: rgb(61,61,61);
}
.swiperBox{
  width: 690rpx;
  height: 240rpx; 
  margin-top: 30rpx;
  border-radius: 15rpx;
}
.swiperBox swiper{
  width: 100%;
  height: 100%;
}
.swiperBox swiper swiper-item{
  width: 100%;
  height: 100%;
}
.swiperBox swiper swiper-item image{
  width: 100%;
  height: 100%;
}

.hot{
  width: 700rpx;
  height: 24rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
}
.hot image{
  width: 46rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.hot text:nth-child(2){
  font-size: 20rpx;
  color: rgb(61,61,61)
}
.hot text:nth-child(3){
  position: relative;
  left: 440rpx;
  color: rgb(208,204,204)
}
.hotItemBox{
  width: 700rpx;
  display: flex;
  margin-top: 18rpx;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
.hotItem{
  height: 28rpx;
  width: 78rpx;
  text-align: center;
  line-height: 28rpx;
  padding: 0 10rpx;
  margin-left: 18rpx;
  margin-bottom: 20rpx;
  font-size: 16rpx;
  border: 1px solid rgb(227,227,227);
  border-radius: 12rpx; 
}
.hotItem:nth-child(1){
  margin-left: 0rpx;
  color: rgb(242,103,119);
  border:1px solid rgb(225,195,195);
}
.courseList{
  width: 684rpx;
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}
.courseItem{
  width: 100%;
}
.courseList .courseItem .image{
  width: 100%;
  height: 158rpx;
}
.courseList .courseItem .image image{
  width: 100%;
  height: 158rpx;
}
.courseInfo{
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border:1px solid rgb(227,227,227);
  font-size: 16rpx;
}
.courseInfo .title{
  width: 100%;
  height: 75rpx;
  font-size: 20rpx;
}
.courseInfo .title image{
  height: 42rpx;
  width: 42rpx;
  display: block;
  text-align: left;
  font-size: 20rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.courseInfo .number{
  width: 640rpx;
  height: 25rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 16rpx;
  justify-content: space-between;
  
}
.courseInfo .info{
  width: 640rpx;
  height: 25rpx;display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* font-size: 16rpx; */
}
.courseInfo .info image{
  width: 28rpx;
  height: 24rpx;
}
.courseInfo .info view:nth-child(2){
  display: flex;
  height: 25rpx;
  margin-left: 10rpx;
  flex-direction: row-reverse;
  justify-content: right;
}