/* pages/home/home.wxss */
.body{
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.search{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:640rpx;
  height:50rpx;
  margin-top: 35rpx;
  background-color: rgb(208,204,204);
  border:1rpx solid whitesmoke;
  border-radius: 15rpx;
}
.search input{
  width: 600rpx;
  font-size:20rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.search image{ 
  width:25rpx;
  height:25rpx;
  padding:0 20rpx;
}
.navBox{
  width: 640rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 50rpx;
}
.navItem{
  width: 98rpx;
  height: 138rpx;
  margin: 0 15rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navItem image{
  width: 98rpx;
  height: 98rpx;
  margin-bottom: 18rpx;
}
.navItem text{
  font-size: 18rpx;
}
.swiperBox{
  width: 640rpx;
  height: 240rpx; 
  margin-top: 30rpx;
  border-radius: 15rpx;
}
.swiperBox swiper{
  width: 100%;
  height: 100%;
}
.swiperBox swiper swiper-item{
  width: 100%;
  height: 100%;
}
.swiperBox swiper swiper-item image{
  width: 100%;
  height: 100%;
}

.remen{
  width: 640rpx;
  height: 24rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
}
.remen image{
  width: 42rpx;
  height: 18rpx;
  margin-right: 10rpx;
}