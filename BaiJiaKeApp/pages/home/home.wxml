  <!-- 课程列表 -->
  <view class="courseList">
    <view class="courseItem"
      wx:for="{{hotList}}" wx:key="index"  
      bindtap="toCourseDetails">
      <view>
        <image src="/images/home/shangjia.png"></image>
      </view>
      <view class="courseInfo">
        <view>{{item.Name}}</view>
        <view>
