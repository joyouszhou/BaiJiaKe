/* pages/shouCang/shouCang.wxss */
.body{
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.courseList{
  width: 702rpx;
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}
.courseItem{
  width: 100%;
  margin-bottom: 40rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 17rpx 0 rgba(14,32,92,0.15);
  border-radius: 12rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.courseList .courseItem .image{
  width: 100%;
  height: 207rpx;
}
.courseList .courseItem .image image{
  width: 100%;
  height: 100%;
}
.courseInfo{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 16rpx;
  position: relative;
}
.courseInfo .title{
  width: 430rpx;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.courseInfo image{
  height: 62rpx;
  width: 62rpx;
  display: block;
  text-align: left;
  font-size: 20rpx;
  margin: 10rpx 0;
}
.courseInfo .number{
  width: 662rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  justify-content: space-between;
  color: rgba(34,34,34,0.65);
}
.courseInfo .number text{
  width: 100%;
  text-align: right;
}
.courseInfo .info{
  width: 662rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  color: rgba(34,34,34,0.65);
}
.courseInfo .info .film {
  width: 480rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.courseInfo .info .time {
  font-size: 24rpx;
}
.courseInfo .info image{
  width: 28rpx;
  height: 24rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}
.courseInfo .info view:nth-child(2){
  display: flex;
  margin-left: 10rpx;
  flex-direction: row-reverse;
  justify-content: right;
}
.tag-list{
  display: flex;
  align-items: center;
  position: absolute;
  top: 12rpx;
  right: 20rpx;
}
.tag-list .tag-box {
  padding: 20rpx 0rpx;
}
.tag-list image{
  margin-left: 10rpx;
  width: 68rpx;
  height: 34rpx;
}