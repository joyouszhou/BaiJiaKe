/* pages/courseClass/courseClass.wxss */
.body{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tabBar{
  width: 100vw;
  height: 90rpx;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: white;
  font-size: 26rpx;
  color: rgb(34,34,34);
}
.tabBar view{
  height: 28rpx;
}
.tabBar view image{
  width: 20rpx;
  height: 20rpx;
}

.classList{
  width: 100vw;
  height: 0;
  position: fixed;
  top: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  overflow: hidden;
  background: white;
  border-bottom: 1rpx solid rgb(213,213,213);
  box-shadow:0rpx 20rpx 70rpx -50rpx;
}
.classItem{
  width: 160rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  border: 2px solid rgb(213,213,213);
  border-radius: 30rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
}

.courseList{
  width: 700rpx;
  display: flex;
  margin-top: 110rpx;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}
.courseItem{
  width: 100%;
}
.courseList .courseItem view{
  width: 100%;
  height: 150rpx;
}
.courseList .courseItem view image{
  width: 100%;
  height: 100%;
}
.courseInfo{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border:1px solid rgb(227,227,227);
  font-size: 16rpx;
}
.courseInfo view:nth-child(1){
  height: 45rpx;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
.courseInfo view:nth-child(2){
  width: 560rpx;
  height: 45rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
}
.courseInfo view:nth-child(3){
  width: 560rpx;
  height: 45rpx;display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* font-size: 16rpx; */
}
.courseInfo view:nth-child(3) image{
  width: 22rpx;
  height: 22rpx;
}
.courseInfo view:nth-child(3) view:nth-child(2){
  display: flex;
  flex-direction: row-reverse;
  justify-content: right;
}